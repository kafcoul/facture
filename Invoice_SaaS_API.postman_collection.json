              "raw": "{\n  \"client_id\": 1,\n  \"type\": \"standard\",\n  \"currency\": \"XOF\",\n  \"notes\": \"Facture de test\",\n  \"items\": [\n    {\n      \"description\": \"Service de développement\",\n      \"quantity\": 10,\n      \"unit_price\": 50000,\n      \"tax_rate\": 18\n    },\n    {\n      \"description\": \"Support technique\",\n      \"quantity\": 5,\n      \"unit_price\": 25000,\n      \"tax_rate\": 18\n    }\n  ]\n}"
            },
