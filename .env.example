APP_NAME=InvoiceSaaS
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Super Admin - Seul utilisateur autorisé à accéder à /admin (Filament)
# Changez ceci par votre email personnel
SUPER_ADMIN_EMAIL=votre-email@exemple.com

# ===== LOGGING & MONITORING =====
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Sentry Configuration (https://sentry.io)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.0
SENTRY_ENVIRONMENT=local
SENTRY_SEND_DEFAULT_PII=false

# Telescope Configuration
TELESCOPE_ENABLED=true
TELESCOPE_STORAGE_DRIVER=database

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=invoice_saas
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=database
SESSION_DRIVER=file
FILESYSTEM_DRIVER=public

STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
